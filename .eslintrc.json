{
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] } ],
        "react/jsx-indent": [2,4],
        "react/no-unused-prop-types": ["warn", { "customValidators": [], "skipShapeProps": true }],
        "indent": [2,4],
        "no-param-reassign": 0,
        "no-useless-escape": 0,
        "no-class-assign": 0,
        "no-cond-assign": [2, "except-parens"],
        "import/extensions": 0,
        "react/forbid-prop-types": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "new-cap": 0,
        "no-underscore-dangle": 0,
        "no-return-assign": 0,
        "no-debugger": 0,
        "react/no-string-refs": 0 //not ready yet :disappointed:
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ]
}
